{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true
  },
  "imports": {
    "@/": "./src/",
    "@config/": "./src/config/",
    "@routes/": "./src/routes/",
    "@services/": "./src/services/",
    "@models/": "./src/models/",
    "@middleware/": "./src/middleware/",
    "@utils/": "./src/utils/",
    "@database/": "./src/database/",
    "oak": "https://deno.land/x/oak@v16.1.0/mod.ts",
    "oak/helpers": "https://deno.land/x/oak@v16.1.0/helpers.ts",
    "postgres": "https://deno.land/x/postgres@v0.19.3/mod.ts",
    "redis": "https://deno.land/x/redis@v0.32.3/mod.ts",
    "std/dotenv": "https://deno.land/std@0.224.0/dotenv/mod.ts",
    "std/testing": "https://deno.land/std@0.224.0/testing/mod.ts",
    "std/assert": "https://deno.land/std@0.224.0/assert/mod.ts",
    "std/log": "https://deno.land/std@0.224.0/log/mod.ts",
    "std/http": "https://deno.land/std@0.224.0/http/mod.ts",
    "std/crypto": "https://deno.land/std@0.224.0/crypto/mod.ts",
    "zod": "https://deno.land/x/zod@v3.23.8/mod.ts"
  },
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-env --allow-write --watch src/main.ts",
    "start": "deno run --allow-net --allow-read --allow-env --allow-write src/main.ts",
    "test": "deno test --allow-net --allow-read --allow-env --allow-write",
    "test:watch": "deno test --allow-net --allow-read --allow-env --allow-write --watch",
    "test:coverage": "deno test --allow-net --allow-read --allow-env --allow-write --coverage=coverage",
    "coverage": "deno coverage coverage --html",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "check": "deno check src/main.ts",
    "cache": "deno cache src/deps.ts",
    "migrate": "deno run --allow-net --allow-read --allow-env scripts/migrate.ts",
    "seed": "deno run --allow-net --allow-read --allow-env scripts/seed.ts",
    "reset-db": "deno run --allow-net --allow-read --allow-env scripts/reset_db.ts"
  },
  "fmt": {
    "files": {
      "include": ["src/", "tests/", "scripts/"],
      "exclude": ["coverage/"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "semiColons": true,
      "singleQuote": false,
      "proseWrap": "preserve"
    }
  },
  "lint": {
    "files": {
      "include": ["src/", "tests/", "scripts/"],
      "exclude": ["coverage/"]
    },
    "rules": {
      "tags": ["recommended"],
      "exclude": []
    }
  },
  "test": {
    "files": {
      "include": ["tests/"],
      "exclude": ["coverage/"]
    }
  }
}