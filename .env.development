# Development Environment Configuration
# Copy this to .env for local development

# Server Configuration
API_PORT=8000
ENVIRONMENT=development
LOG_LEVEL=DEBUG

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/docverify_dev

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# S3 Storage (Cloudflare R2 - Development)
S3_ACCESS_KEY_ID=your_dev_access_key_here
S3_SECRET_ACCESS_KEY=your_dev_secret_key_here
S3_BUCKET=document-verification-dev
S3_ENDPOINT=https://your-account.r2.cloudflarestorage.com
S3_REGION=auto

# External Services
LLAMA_PARSE_API_KEY=your_llama_parse_key_here
OPENAI_API_KEY=sk-your-openai-key-here

# Security (Development - change in production!)
API_KEY_SECRET=dev-api-key-secret-change-in-prod
JWT_SECRET=dev-jwt-secret-change-in-prod

# Feature Flags
ENABLE_AI_VERIFICATION=false
ENABLE_RATE_LIMITING=true
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/png,image/jpeg,application/pdf

# Performance
MAX_CONCURRENT_UPLOADS=50
QUEUE_TIMEOUT=300000